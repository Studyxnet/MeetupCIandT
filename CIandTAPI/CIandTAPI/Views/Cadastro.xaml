<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CIandTAPI.Views.Cadastro">
  <ScrollView>
    <StackLayout>
      <Entry Text="{Binding title, Mode=TwoWay}" />
      <Entry Text="{Binding body, Mode=TwoWay}" />
      <Button Text="Cadastrar Post" Command="{Binding CadastrarCmd}" />
      <Button Text="Listar Posts" Clicked="openList_Clicked" />
    </StackLayout>
  </ScrollView>
</ContentPage>